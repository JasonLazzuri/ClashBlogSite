{{#if addNewBlog}}
  <h1>New Blog</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="blogpost">blogpost</label>
        {{input value=blogpost id="blogpost"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveBlog1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'blogFormShow'}}>New Blog</button>
{{/if}}
